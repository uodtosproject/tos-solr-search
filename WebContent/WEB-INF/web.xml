<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

  	<servlet>
    	<servlet-name>Pages</servlet-name>
    	<servlet-class>br.com.betohayasida.SolrSearch.Controllers.PagesController</servlet-class>
	</servlet>
	<servlet-mapping>
    	<servlet-name>Pages</servlet-name>
    	<url-pattern>/page/*</url-pattern>
  	</servlet-mapping>
  	
  	<servlet>
    	<servlet-name>Search</servlet-name>
    	<servlet-class>br.com.betohayasida.SolrSearch.Controllers.SearchController</servlet-class>
	</servlet>
	<servlet-mapping>
    	<servlet-name>Search</servlet-name>
    	<url-pattern>/</url-pattern>
  	</servlet-mapping>
	<servlet-mapping>
    	<servlet-name>Search</servlet-name>
    	<url-pattern>/search/*</url-pattern>
  	</servlet-mapping>
  	
   	<servlet>  
		<servlet-name>Common</servlet-name>  
		<servlet-class>br.com.betohayasida.SolrSearch.Controllers.Common</servlet-class>  
    </servlet>  
	<servlet-mapping>  
        <servlet-name>Common</servlet-name>  
        <url-pattern>/resources/*</url-pattern>  
    </servlet-mapping>  

</web-app>